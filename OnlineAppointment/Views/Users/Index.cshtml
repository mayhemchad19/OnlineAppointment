@model IEnumerable<OnlineAppointment.Models.User>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
<h2>List of Active Users</h2>
<br />
<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>

<div class="col-lg-12">
    <table class="table table-striped table-bordered" id="example">
        <thead>
            <tr>

                <th>
                    Role
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>*@
                <th>
                   Full Name
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.BirthDate)
                </th>
                <th>
                    Gender
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MobileNumber)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.UserStatus)
                </th>
                <th>
                    Email Verified
                </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.UserRole.RoleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender.GenderType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MobileNumber)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.UserStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.isVerified)
                    </td>*@
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.UserID }) |
                        @*@Html.ActionLink("Details", "Details", new { id = item.UserID }) |*@
                        @Html.ActionLink("Delete", "Delete", new { id = item.UserID })
                    </td>
                </tr>
            }
        </tbody>

    </table>


    </div>

